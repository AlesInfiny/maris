{
  "name": "@dressca-frontend/common",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/common-lib.umd.cjs",
  "module": "./dist/common-lib.js",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/common-lib.js",
      "require": "./dist/common-lib.umd.cjs"
    }
  },
  "scripts": {
    "build:dev": "run-p type-check build-only:dev --print-label",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only:dev": "vite build --mode dev",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore && stylelint **/*.{vue,css} --fix",
    "lint:ci": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore && stylelint **/*.{vue,css}",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@heroicons/vue": "^2.1.5",
    "@rushstack/eslint-patch": "^1.10.4",
    "vite": "^5.3.5",
    "vue": "^3.4.25"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/test-utils": "^2.4.6",
    "vitest": "^2.0.5"
  }
}
