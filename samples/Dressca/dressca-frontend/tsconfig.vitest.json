{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/api-client/models/*",
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["node", "jsdom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "preserveValueImports": false,
    "importsNotUsedAsValues": "preserve"
  }
}
