<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <security>
        <requestFiltering>
          <!-- 3MB = 3145728 bytes -->
          <requestLimits maxAllowedContentLength="3145728" />
        </requestFiltering>
      </security>
    </system.webServer>
  </location>
</configuration>
