{
  // node_modules 配下の TypeScript を利用する
  // 初回は TypeScript: Select TypeScript version で指定する必要あり。
  "typescript.tsdk": "node_modules/typescript/lib",

  // Lint の有効化
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },

  // textlint の設定ファイルを指定
  "textlint.configPath": "../../../.textlintrc",
  "textlint.ignorePath": "../../../.textlintignore",

  // markdownlint の設定ファイルを指定
  "markdownlint.configFile": "../../../.markdownlint-cli2.yaml",

  // Formatter を Prettier にする
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "css.validate": false,
  "typescript.validate.enable": false,

  "stylelint.validate": ["vue"],

  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  "cSpell.words": [
    "dressca",
    "msal",
    "openapi",
    "openapitools",
    "pinia",
    "rushstack",
    "stylelint",
    "vite"
  ]
}
